/**app.wxss**/
page{
  position: relative;
  height: 100%;
  line-height:1;
  background: #f5f5f5;
  font-family: "SimHei,Microsoft YaHei,Serif";
}
.mwrap{
  position: relative;
}
.m-color{
  color: #89534a;
}
.fix{
  zoom: 1;
}
.fix:after { 
  content: " "; 
  display: block;
  clear: both; 
}
.bg-fff{
  background: #fff;
}
.f_l {
  float: left;
}
.f_r{
  float: right;
}
.flex{
  display: flex;
}
.flex-1{
  flex: 1;
}
.flex-2{
  flex: 2;
}
.hide{
  display:none!important;
}
.bold{
  font-weight: 700;
}
.show{
  display:block;
}
.center{
  text-align: center;
}
.phcolor{
  color: #ccc;
  font-size: 24rpx;
}
/* nav */
.a-link{
  display: inline-block;
  color: #89534a;
  font-size: 24rpx;
  text-decoration: underline;
}
/* 按钮组 */
.btn-group{
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  display: flex;
  flex-wrap: nowrap;
  height: 100rpx;
}
.btn-group .btn{
  background: #89534a;
  color: #fff;
  font-size: 30rpx;
  line-height: 100rpx;
  text-align: center;
}
.btn-group .btn.cancel{
  box-sizing: border-box;
  border: 1px solid #ccc;
  background: #fff;
  color: #000;
  font-size: 30rpx;
  line-height: 100rpx;
}
/* 
 * 组件模版bookitem -->pages/common/bookitem/book-item.wxml
 * 作用：图书详情模版 
 */
@import "./pages/common/bookitem/book-item.wxss";
